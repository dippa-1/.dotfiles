server {
    listen 8081 ssl;
    server_name api.csgo-inventory-tracker.com;

    ssl_certificate /etc/letsencrypt/live/api.csgo-inventory-tracker.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/api.csgo-inventory-tracker.com/privkey.pem;

    location / {
        proxy_pass http://localhost:50000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}
